<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caigehazelwood.hchsguidetogood.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME TO THE STUDENT&apos;S GUIDE TO HCHS"
        android:id="@+id/textView"
        android:background="#990000"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Announcements"
        android:id="@+id/button2"
        android:textColor="#000000"
        android:background="#FFD600"
        android:onClick="button2"
        android:layout_weight="1"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bell Schedule"
        android:id="@+id/button4"
        android:textColor="#000000"
        android:background="#1976D2"
        android:onClick="button4"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Descriptions"
        android:id="@+id/button5"
        android:background="#E91E63"
        android:textColor="#000000"
        android:onClick="button5"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Menu"
        android:id="@+id/button3"
        android:textColor="#000000"
        android:background="#E53935"
        android:onClick="button3"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/button8"
        android:textColor="#000000"
        android:background="#6D4C41"
        android:onClick="button8"
        android:layout_weight="1"/>

</LinearLayout>