<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caigehazelwood.hchsguidetogood.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME TO THE STUDENT&apos;S GUIDE TO HCHS"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#990000"
        android:textColor="#ffffff"
        android:textAlignment="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Announcements"
        android:id="@+id/button2"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:background="#FFD600"
        android:layout_below="@id/textView"
        android:onClick="button2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bell Schedule"
        android:id="@+id/button4"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:background="#1976D2"
        android:onClick="button4"
        android:layout_below="@id/button2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Descriptions"
        android:id="@+id/button5"
        android:layout_alignParentLeft="true"
        android:background="#E91E63"
        android:textColor="#000000"
        android:onClick="button5"
        android:layout_below="@id/button4"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Menu"
        android:id="@+id/button3"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:background="#E53935"
        android:onClick="button3"
        android:layout_below="@id/button5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/button8"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#6D4C41"
        android:onClick="button8"
        android:layout_below="@id/button3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/button9"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#FF6D00"
        android:onClick="button9"
        android:layout_below="@id/button8"/>

</RelativeLayout>
